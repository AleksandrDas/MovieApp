@model  MovieApp.Models.MovieSessionModel
@{
    ViewBag.Title = "Movie session";
}

<h2>@(Model.Time ?? "Jauns seanss")</h2>

@using (Html.BeginForm("Edit", "MovieSession", FormMethod.Post, new { @class = "form-horizontal" }))
    
{
    @Html.ValidationSummary()
    <div class="form-group">
        @Html.LabelFor(m => m.Time, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-10">
            @Html.TextBoxFor(m => m.Time, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Time)
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Price, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-10">
            @Html.TextBoxFor(m => m.Price, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Price)
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            @Html.HiddenFor(m => m.Id)
            @Html.HiddenFor(m => m.MovieId)
            <input type="submit" value="Saglabat" class="btn btn-default" />
        </div>
    </div>