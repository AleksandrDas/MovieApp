@model MovieApp.Models.UserModel
@{
    ViewBag.Title = "Register";
}

<h2>Register</h2>

@using (Html.BeginForm("Register", "User", FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.ValidationSummary()
    <div class="form-group">
        @Html.LabelFor(m => m.Vards, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-10">
            @Html.TextBoxFor(m => m.Vards, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Vards)
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Epasts, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-10">
            @Html.TextBoxFor(m => m.Epasts, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Epasts)
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Parole, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-10">
            @Html.PasswordFor(m => m.Parole, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Parole)
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Parole2, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-10">
            @Html.PasswordFor(m => m.Parole2, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Parole2)
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <input type="submit" value="Register" class="btn btn-default" />
        </div>
    </div>
}
